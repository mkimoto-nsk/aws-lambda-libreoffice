{
  "name": "@shelf/aws-lambda-libreoffice",
  "version": "7.2.0",
  "description": "Utility to work with Docker version of LibreOffice in Lambda",
  "keywords": [
    "aws lambda",
    "libreoffice",
    "serverless",
    "pdf"
  ],
  "repository": "shelfio/aws-lambda-libreoffice",
  "license": "MIT",
  "author": {
    "name": "Vlad Holubiev",
    "email": "vlad@shelf.io",
    "url": "https://shelf.io"
  },
  "main": "lib",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib/ && tsc",
    "coverage": "jest --coverage",
    "lint": "eslint . --fix",
    "lint:ci": "eslint .",
    "prepack": "pnpm build",
    "test": "jest src",
    "type-check": "tsc --noEmit",
    "type-check:watch": "pnpm run type-check -- --watch"
  },
  "lint-staged": {
    "*.{html,json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "prettier": "@shelf/prettier-config",
  "dependencies": {
    "@shelf/is-audio-filepath": "2.0.0",
    "del": "6.0.0",
    "is-image": "3.1.0",
    "is-video": "2.0.0"
  },
  "devDependencies": {
    "@shelf/eslint-config": "5.2.3",
    "@shelf/prettier-config": "1.0.0",
    "@shelf/tsconfig": "0.1.0",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "@types/node": "^24.2.1",
    "eslint": "9.33.0",
    "husky": "8.0.3",
    "jest": "30.0.5",
    "lint-staged": "13.3.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=16"
  },
  "publishConfig": {
    "access": "public"
  }
}
